import 'package:sqflite/sqflite.dart';
import 'package:dart:async';
import 'package:dart:io';
import 'package:path/path.dart';
import 'package:path_provider/path_provider.dart';
import 'package:sqflite/sqflite.dart';
import 'Clienti.dart';

Future<List<Clienti>> getAllProducts() async {
      final db = await database;
      List<Map> results = await db.query(
         "Clienti", columns: Clienti.columns, orderBy: "id ASC"
      );
      List<Clienti> clienti = new List();
      results.forEach((result) {
         Clienti cliente = Clienti.fromMap(result);
         clienti.add(cliente);
      });
      return clienti;
   }

   Future<Database> get database async {
      if (_database != null)
      return _database;
      _database = await initDB();
      return _database;
   }







}